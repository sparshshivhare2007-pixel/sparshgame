{
  "name": "sparshgame-telegram-bot",
  "description": "Telegram bot built with python-telegram-bot, MongoDB and OpenAI",
  "repository": "https://github.com/sparshshivhare2007-pixel/sparshgame",
  "keywords": [
    "telegram",
    "bot",
    "python",
    "python-telegram-bot",
    "mongodb",
    "openai"
  ],
  "env": {
    "BOT_TOKEN": {
      "description": "Telegram Bot Token from @BotFather",
      "required": true
    },
    "MONGO_URI": {
      "description": "MongoDB connection string",
      "required": true
    },
    "OPENAI_API_KEY": {
      "description": "OpenAI API key",
      "required": false
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "stack": "heroku-22"
}
